{
    "name": "phaser3-typescript-esbuild-bootstrap5",
    "version": "1.0.0",
    "description": "Phaser 3 + TypeScript + ESBuild + Bootstrap 5 + LiveReload Template",
    "main": "dist/index.html",
    "scripts": {
        "build": "esbuild src/index.ts --outfile=dist/index.js --bundle --minify",
        "watch": "esbuild src/index.ts --outfile=dist/index.js --bundle --watch",
        "serve": "serve dist -p 8000",
        "livereload": "livereload dist/",
        "dev": "concurrently \"npm run watch\" \"npm run serve\" \"npm run livereload\"",
        "eslint": "eslint ."
    },
    "keywords": [
        "esbuild",
        "phaser",
        "phaser 3",
        "bootstrap",
        "bootstrap 5",
        "game",
        "livereload",
        "typescript"
    ],
    "author": "ebolax",
    "license": "ISC",
    "devDependencies": {
        "@types/bootstrap": "^5.1.12",
        "@typescript-eslint/eslint-plugin": "^5.30.5",
        "@typescript-eslint/parser": "^5.30.5",
        "bootstrap": "^5.1.3",
        "concurrently": "^7.2.2",
        "esbuild": "^0.14.48",
        "eslint": "^8.19.0",
        "livereload": "^0.9.3",
        "phaser": "^3.55.2",
        "phaser3-rex-plugins": "^1.1.71",
        "phaser3-rex-plugins-types": "^0.2.0",
        "serve": "^13.0.2",
        "typescript": "^4.7.4"
    }
}
