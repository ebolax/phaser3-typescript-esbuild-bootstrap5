{
    "name": "phaser3-typescript-esbuild-bootstrap5",
    "version": "1.0.0",
    "description": "Phaser 3 + TypeScript + ESBuild + Bootstrap 5 + LiveReload Template",
    "main": "dist/index.html",
    "scripts": {
        "build": "esbuild src/index.ts --outfile=dist/index.js --bundle --minify",
        "watch": "esbuild src/index.ts --outfile=dist/index.js --bundle --watch",
        "serve": "serve dist -p 8000",
        "livereload": "livereload dist/",
        "dev": "concurrently \"npm run watch\" \"npm run serve\" \"npm run livereload\""
    },
    "keywords": [
        "esbuild",
        "phaser",
        "phaser 3",
        "bootstrap",
        "game",
        "typescript"
    ],
    "author": "ebolax",
    "license": "ISC",
    "devDependencies": {
        "@types/bootstrap": "^5.1.1",
        "bootstrap": "^5.1.0",
        "concurrently": "^6.2.1",
        "esbuild": "^0.12.20",
        "livereload": "^0.9.3",
        "phaser": "^3.55.2",
        "phaser3-rex-plugins": "^1.1.59",
        "phaser3-rex-plugins-types": "^0.1.3",
        "serve": "^12.0.0",
        "tslint": "^6.1.3",
        "typescript": "^4.3.5"
    }
}
